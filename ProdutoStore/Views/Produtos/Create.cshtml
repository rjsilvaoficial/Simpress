@model ProdutoStore.Models.ProdutoViewModel




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="row">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control " } })
        </div>
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="row">
            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="row">
            @Html.LabelFor(model => model.CategoriaId, "Categoria de produto", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="row">
            @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
        </div>


    </div>


    @Html.EditorFor(model => model.Perecivel)
    @Html.ValidationMessageFor(model => model.Perecivel, "", new { @class = "text-danger" })
    @Html.LabelFor(model => model.Perecivel, htmlAttributes: new { @class = "control-label" })


    @Html.EditorFor(model => model.Ativo)
    @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
    @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "control-label ml-4" })

    <input type="submit" value="Cadastrar" class="btn btn-primary" />





</div>
}


<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            Categoria de produto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perecivel)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListaProdutos)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perecivel)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "Edit", new { id = item.ProdutoId }, htmlAttributes: new { @class = "btn btn-success" })
                @Html.ActionLink("Deletar", "Delete", new { id = item.ProdutoId }, htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
